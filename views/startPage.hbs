
<div class="setting-game">
    <form class="setting__form" action="/play" method="post">
        <div class="setting__block">
            <label>Игрок1:</label>
            <p class="player">{{user}}</p>
        </div>
        <div class="setting__block">
            <label  for="player2">Игрок2:</label>
            <input id="player2" class="input setting__input" type="text" name="name" placeholder="Введите ФИО игрока" maxlength="25" required>
        </div>
        <div class="select-first">
            <p class="setting__title">Кто ходит первым:</p>
            <input type="radio" id="option1" name="choice" value= true>
            <label for="option1">Игрок1</label><br>
            <input type="radio" id="option2" name="choice" value= false>
            <label for="option2">Игрок2</label><br>
        </div>
        <input type="hidden" name = "title" value="Игра на одном пк">
        <input type="hidden" name = "mode" value="true">
        <button class="btn settings__btn" type="submit">Играть</button>


    </form>
</div>